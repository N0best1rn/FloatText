<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:orientation="horizontal"
	android:gravity="center">

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="2.0"
		android:padding="2dp">

		<ImageView
			android:layout_height="56dp"
			android:layout_width="56dp"
			android:background="@drawable/application_icon"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:gravity="left|center"
		android:padding="5dp"
		android:layout_weight="5.0">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			android:textColor="@color/colorNotificationTitle"
			android:typeface="monospace"
			android:layout_weight="2.5"
			android:gravity="center"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceMedium"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/notification_win_count"
			android:id="@+id/textview_notification_win_count"
			android:textColor="@color/colorNotificationData"
			android:typeface="monospace"
			android:layout_weight="1.0"
			android:gravity="top|center"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceSmall"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="1.0"
		android:padding="4dp">

		<ImageView
			android:clickable="true"
			android:layout_height="29dp"
			android:layout_width="29dp"
			android:id="@+id/button_notification_show"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="1.0"
		android:padding="4dp">

		<ImageView
			android:clickable="true"
			android:layout_height="29dp"
			android:layout_width="29dp"
			android:id="@+id/button_notification_unlock"/>

	</LinearLayout>

</LinearLayout>

