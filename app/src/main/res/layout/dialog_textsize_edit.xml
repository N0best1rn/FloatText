<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:padding="8dp">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="20sp"
			android:id="@+id/textview_textsize_now"
			android:layout_centerInParent="true"/>

		<Button
			android:layout_height="30dp"
			android:layout_width="30dp"
			android:background="@drawable/ic_minus"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="23dp"
			android:id="@+id/textsize_button_minus"/>

		<Button
			android:layout_height="30dp"
			android:layout_width="30dp"
			android:background="@drawable/ic_plus_black"
			android:layout_alignParentRight="true"
			android:layout_marginRight="23dp"
			android:id="@+id/textsize_button_plus"/>

	</RelativeLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="@string/textsize_edit_attention"
		android:gravity="center"/>

	<View
		android:layout_height="15dp"
		android:layout_width="match_parent"/>

	<SeekBar
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:id="@+id/seekbar_textsize"/>

	<View
		android:layout_height="15dp"
		android:layout_width="match_parent"/>

</LinearLayout>

